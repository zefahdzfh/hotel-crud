<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Form Guestbook</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="flex items-center justify-center min-h-screen bg-gray-100">
    <div class="w-full max-w-sm p-6 bg-white shadow-md rounded-lg">
        <h2 class="text-2xl font-semibold text-gray-700 text-center mb-4">Tambah Tamu</h2>
        <form action="/guestbook/store" method="POST" class="space-y-4">
            <input type="text" name="NamaTamu" placeholder="Nama" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none">
            <input type="email" name="EmailTamu" placeholder="Email" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none">
            <input type="text" name="PhoneTamu" placeholder="Nomor Telepon" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none">
            
            <!-- Dropdown kamar -->
            <select name="RoomID" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none">
                <option value="" disabled selected>Pilih Kamar</option>
                <% rooms.forEach(room => { %>
                    <option value="<%= room.RoomID %>"><%= room.RoomNumber %> - <%= room.Type %></option>
                <% }) %>
            </select>

            <input type="datetime-local" name="CheckInTime" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none">
            <input type="datetime-local" name="CheckOutTime" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none">
            <textarea name="Notes" placeholder="Catatan" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none"></textarea>
            
            <button type="submit" class="w-full bg-blue-500 text-white py-2 rounded-lg hover:bg-blue-600 transition">Submit</button>
        </form>
    </div>
</body>
</html>
